@model TreeHouseASPPractice.Models.ComicBook

@{
    ViewData["Title"] = "Home Page";
    <!-- this tells our page we won't be using layout types -->
    Layout = "~/Views/Home/Index.cshtml";
    ViewBag.Title = Model.DisplayText;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title></title>
</head>
<body>
    <div>
        <h1>@Model.SeriesTitle</h1>
        <h2>Issue #@Model.IssueNumber</h2>

        <h5>Description:</h5>
        <div>@Html.Raw(Model.DescriptionHtml)</div>

        @if (Model.Artists.Length > 0)
        {
            <h5>Artists:</h5>
            <div>
                <ul>
                    @foreach (var artist in Model.Artists)
                    {
                        <li>@artist.Role: @artist.Name</li>
                    }
                </ul>
            </div>
        }
    </div>
</body>
</html>

